
#sidebarContainer.float-left.bg-light.d-flex.flex-column.justify-content-center.bootstrap-demo
    #sidebar.overflow-y-auto
        a(href='/dashboard')
            .icon.round.shadow
                img.round(alt=user.username, src=user.avatarUrl(64))
        hr
        each guild in guilds
            a(href='/servers/' + guild.id)
                .icon.shadow.round.my-2(data-toggle='tooltip', data-placement='right', title= guild.name)
                    if guild.icon
                        img.round(alt=guild.name, src=guild.iconURL({dynamic: true, size: 64}))
                    else
                        span.text-center.abbr #{guild.nameAcronym}
        a(href='/invite')
            .icon
                p.abbr.text-success.text-center
                    i.fas.fa-plus
    .hamburger.px-1.bg-light.text-center
        i.fas.fa-bars#hamburgerSurround