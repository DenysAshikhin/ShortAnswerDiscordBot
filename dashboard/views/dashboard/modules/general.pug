section#generalModule.module.container.px-5
    form(action='/servers/' + guild.id + '/general?_method=PUT', method='POST')
        .jumbotron.bg-transparent.pb-0
            h1.display-4.text-center General
        .form-group.margin.my-5
            .row
                .col-4
                    label Default Server Prefix
                    label #{serverPrefix}
                    input.form-control#guildPrefix(type='text', name='prefix', class=serverPrefix,  value=guildPrefix)

                    label Personal Server Prefix
                    label #{userPrefix}
                    input.form-control#userPrefix(type='text', name='prefix', class=userPrefix,  value=userPrefix)
                .col-4
                    label Whitelisted command channels
                    select.form-control(name=`WhitelistedChannelIds`, multiple)
                        each channel of Array.from(guild.channels.cache.filter(c => c.type == 'text').values())
                            option ##{channel.name}
                .col-4
        .d-flex.justify-content-center
            #generalSubmitBtn.button.btn.btn-success #[i.fas.fa-rocket] Submit